<header class="header">
  <div class="header-container">
    <%= link_to root_path, class: "navbar" do%>
      <h1 class="logo-title" style="font-family: cursive;">Neagaridus</h1>
    <% end %>

    <div class="nav-item">
      <%= link_to "値上げ商品", products_path, class: "nav-link" %>
      <%= link_to "損失チェック", keisan_path(@product), class: "nav-link" %>
      <%= link_to "値上げ予想", root_path, class: "nav-link" %>
      <% if user_signed_in? %>
        <%= link_to current_user.username,root_path, class: "user-edit" %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "logout-btn" %>
      <% else %>
        <%= link_to "ログイン", new_user_session_path, class: "login-btn" %>
        <%= link_to "登録する", new_user_registration_path, class: "new-user-btn" %>
      <% end %>
    </div>
  </div>
</header>
