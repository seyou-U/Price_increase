<div class="commonality-box">
  <div class="commonality-container">
    <div class="sign-area">
      <p>ログイン</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text" %>
        </div>
        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "text" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="check-field">
            <%= f.check_box :remember_me %>
            <%= f.label :ログインを記録する %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "ログイン", class:"login-account btn" %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
