<div class = "commonality-box">
  <div class = "commonality-container">
    <h2 class="edit-title">アカウント編集</h2>
    <div class = "inner-account">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <div class = "form-group">
            <%= f.label :username,"名前", class: "title" %>
            <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "text"%>
          </div>
        </div>
        <div class="field">
          <div class = "form-group">
            <%= f.label :email,"メールアドレス", class: "title" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text"%>
          </div>
        </div>
        <div class="field">
          <div class = "form-group">
            <%= f.label :user_image,"ユーザーアイコン", class: "title" %>
            <%= f.file_field :user_image, class: "edit-form"%>
          </div>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="field">
          <div class = "form-group">
            <%= f.label :password,"変更後パスワード  (変更する場合のみ入力)", class: "title"  %>
            <%= f.password_field :password, autocomplete: "new-password", class: "text"%>
            <% if @minimum_password_length %>
            <% end %>
          </div>
        </div>
        <div class="field">
          <div class = "form-group">
            <%= f.label :password_confirmation,"パスワード確認用 (変更する場合のみ入力)", class: "title"  %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text"%>
          </div>
        </div>
        <div class="field">
          <div class = "form-group">
            <%= f.label :current_password,"現在のパスワード", class: "title"  %>
            <%= f.password_field :current_password, placeholder: "現在のパスワードを入力", autocomplete: "current-password", class: "text" %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "更新",class: "btn update" %>
        </div>
      <% end %>
      <div class="actions">
        <%= link_to "戻る", :back , class: "btn update back"%>
      </div>
    </div>
  </div>
</div>
