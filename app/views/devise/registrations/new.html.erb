<div class="commonality-box">
  <div class="commonality-container">
    <div class="sign-area">
      <p>新規登録</p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :ユーザーネーム %><br />
          <%= f.text_field :username, autofocus: true, autocomplete: "email", class: "sign-text" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "sign-text" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "new-password", class: "sign-text" %>
        </div>

        <div class="field">
          <%= f.label :確認用のパスワード %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "sign-text" %>
        </div>

        <div class="actions">
          <%= f.submit "新しいアカウントを作成", class:"new-account btn" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
